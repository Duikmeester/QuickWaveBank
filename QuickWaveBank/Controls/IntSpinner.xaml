<UserControl x:Class="QuickWaveBank.Controls.IntSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuickWaveBank.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" Height="22" Width="80" GotFocus="OnGotFocus" HorizontalAlignment="Left" VerticalAlignment="Top">

    <UserControl.Resources>
        <LinearGradientBrush x:Key="ControlNormalBorderKey" EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">
            <GradientStop Color="#ABADB3" Offset="0.05" />
            <GradientStop Color="#E2E3EA" Offset="0.07" />
            <GradientStop Color="#E3E9EF" Offset="1" />
        </LinearGradientBrush>
    </UserControl.Resources>
    <TextBox x:Name="textBox" TextWrapping="NoWrap" Focusable="True" Text="0" PreviewTextInput="OnTextInput" TextChanged="OnTextChanged" Padding="2" HorizontalContentAlignment="Right" Margin="0" TabIndex="0" LostFocus="OnFocusLost" AllowDrop="False"/>
</UserControl>

